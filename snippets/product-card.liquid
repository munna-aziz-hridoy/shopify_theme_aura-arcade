<div class="card h-100 w-100 p-0 shadow border-0">
  <img
    src="{{ product.featured_image |  img_url: 'medium' }}"
    class="card-img-top"
    alt="{{ product.title }}"
    width="100%"
    height="250">
  <div class="card-body ">
    <h5 class="card-title text-start">{{ product.title }}</h5>
    <p class="card-text fw-bolder text-start">{{ product.price | money }}</p>
    <a href="{{ product.url }}" class="btn btn-primary w-100">View Product</a>
  </div>
</div>