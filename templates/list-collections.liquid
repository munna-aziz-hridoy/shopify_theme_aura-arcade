<section class="container">
  <h2 class="text-center fs-4 fw-semibold my-5">{{ page_title }}</h2>
  <div class="row my-4 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 gap-4">
    {% for collection in collections %}
      <div class="card p-0" style="width: 18rem;">
        <img
          src="{{ collection.featured_image |  image_url: width: 600 }}"
          class="card-img-top rounded-top"
          alt="{{ collection.title }}"
          width="100%"
          height="250">
        <div class="card-body">
          <h5 class="card-title">{{ collection.title | escape }}</h5>
          <p class="card-text">{{ collection.description | escape }}</p>
          <a href="{{ collection.url }}" class="btn btn-primary">Visit now</a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>